<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegistratieView"
             x:DataType="vm:RegistratieViewModel">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Account Aanmaken" FontSize="24" HorizontalOptions="Center"/>
        <Entry Text="{Binding EmailAdres}" Placeholder="Emailadres" HorizontalOptions="Fill" Keyboard="Email"/>
        <Label Text="{Binding EmailValidatieFailMessage}" TextColor="Red"/>
        <Entry Text="{Binding Gebruikersnaam}" Placeholder="Gebruikersnaam" HorizontalOptions="Fill" Keyboard="Text" MaxLength="20"/>
        <Label Text="{Binding GebruikersnaamValidatieFailMessage}" TextColor="Red"/>
        <Entry Text="{Binding Wachtwoord}" Placeholder="Wachtwoord" HorizontalOptions="Fill" IsPassword="{Binding IsPassword}"/>
        <Entry Text="{Binding WachtwoordBevestiging}" Placeholder="Wachtwoord bevestiging" HorizontalOptions="Fill" IsPassword="{Binding IsPassword}"/>
        <HorizontalStackLayout>
            <CheckBox CheckedChanged="OnCheckBoxChanged" HorizontalOptions="Center" VerticalOptions="Center"/>
            <Label Text="Wachtwoord weergeven" HorizontalOptions="Center" VerticalOptions="Center"/>
        </HorizontalStackLayout>
        <Label Text="{Binding WachtwoordValidatieFailMessage}" TextColor="Red"/>
        <Button Text="Registreren" HorizontalOptions="Fill" Command="{Binding RegistratieCommand}"/>
        <Label Text="{Binding VeldenLeegMessage}" TextColor="Red"/>
        <Button Text="Annuleren" HorizontalOptions="Fill" Command="{Binding AnnulerenCommand}"/>
    </StackLayout>
</ContentPage>